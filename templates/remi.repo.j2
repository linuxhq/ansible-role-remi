[remi]
name=Remi's RPM repository for Enterprise Linux {{ remi_rel }} - $basearch
#baseurl=http://rpms.remirepo.net/enterprise/{{ remi_rel }}/remi/$basearch/
#mirrorlist=https://rpms.remirepo.net/enterprise/{{ remi_rel }}/remi/httpsmirror
mirrorlist=http://cdn.remirepo.net/enterprise/{{ remi_rel }}/remi/mirror
enabled={{ '1' if remi_repository_remi|bool else '0' }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-remi

