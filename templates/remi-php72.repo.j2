# This repository only provides PHP 7.2 and its extensions
# NOTICE: common dependencies are in "remi-safe"

[remi-php72]
name=Remi's PHP 7.2 RPM repository for Enterprise Linux {{ remi_rel }} - $basearch
#baseurl=http://rpms.remirepo.net/enterprise/{{ remi_rel }}/php72/$basearch/
#mirrorlist=https://rpms.remirepo.net/enterprise/{{ remi_rel }}/php72/httpsmirror
mirrorlist=http://rpms.remirepo.net/enterprise/{{ remi_rel }}/php72/mirror
enabled={{ '1' if remi_remi_php72 is defined and remi_remi_php72 else '0' }}
