# This repository only provides PHP 7.1 and its extensions
# NOTICE: common dependencies are in "remi-safe"

[remi-php71]
name=Remi's PHP 7.1 RPM repository for Enterprise Linux {{ remi_rel }} - $basearch
#baseurl=http://rpms.remirepo.net/enterprise/{{ remi_rel }}/php71/$basearch/
#mirrorlist=https://rpms.remirepo.net/enterprise/{{ remi_rel }}/php71/httpsmirror
mirrorlist=http://cdn.remirepo.net/enterprise/{{ remi_rel }}/php71/mirror
enabled={{ '1' if remi_repository_remi_php71|bool else '0' }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-remi

